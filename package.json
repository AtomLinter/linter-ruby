{
  "name": "linter-ruby",
  "main": "./lib/main",
  "version": "1.2.3",
  "description": "Lint Ruby on the fly, using ruby -wc",
  "repository": "https://github.com/AtomLinter/linter-ruby",
  "license": "MIT",
  "engines": {
    "atom": ">0.180.0"
  },
  "activationHooks": ["language-ruby:grammar-used"],
  "providedServices": {
    "linter": {
      "versions": {
        "1.0.0": "provideLinter"
      }
    }
  },
  "dependencies": {
    "atom-linter": "^8.0.0",
    "atom-package-deps": "^4.0.1"
  },
  "devDependencies": {
    "eslint": "latest"
  },
  "package-deps": [
    "linter"
  ],
  "eslintConfig": {
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    },
    "ecmaFeatures": {
      "modules": true
    },
    "globals": {
      "atom": true
    }
  }
}
